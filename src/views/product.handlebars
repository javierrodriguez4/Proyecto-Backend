<div class="card" style="width: 18rem;">
  <img src="{{ this.thumbnail }}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{ this.title }}</h5>
    <p class="card-text">{{ this.description }}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Precio: ${{ this.price }}</li>
    <li class="list-group-item">Codigo del producto: {{ this.code }}</li>
    <li class="list-group-item">Cantidad disponible: {{ this.stock }}</li>
  </ul>
  <div class="card-body">
    <a href="#" class="btn btn-primary">Comprar</a>
    <a href="#" class="btn btn-primary">Agregar al carrito</a>
  </div>
</div>